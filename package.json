  },
  "homepage": "https://github.com/h0r0m4n/h0r0m4n.github.io#readme",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "clean-css": "^5.2.4",
    "luxon": "^2.5.2",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
