{
  "name": "h0r0m4n.github.io",
  "version": "5.6.0",
  "description": "A personal website project.",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch --no-source-map src/sass:dist/css/",
    "watch:eleventy": "ELEVENTY_ENV=development npx @11ty/eleventy --serve",
    "build:sass": "sass --style=compressed --no-source-map src/sass:dist/css/",
    "build:eleventy": "ELEVENTY_ENV=production npx @11ty/eleventy",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:* --sequential"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h0r0m4n/h0r0m4n.github.io.git"
